@model Articles.Web.Models.CreateArticleViewModel

<div style="margin:30px"></div>
@using (Html.BeginForm("Create", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="form-group">
            @Html.LabelFor(m => Model.Title, new { @class = "col-md-4 control-label" })
            <div class="col-md-8">
                @Html.TextBoxFor(m => Model.Title, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            @Html.LabelFor(m => Model.Content, new { @class = "col-md-4 control-label" })
            <div class="col-md-8">
                @Html.TextAreaFor(m => Model.Content, new { @class = "form-control", rows = "10" })
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Avatar", new { @class = "control-label col-md-4" })
        <div class="col-md-8">
            <input type="file" id="Avatar" name="upload" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-4 control-label"></div>
        <div class="col-md-8">
            <input type="submit" class="btn btn-primary" />
        </div>
    </div>
}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}